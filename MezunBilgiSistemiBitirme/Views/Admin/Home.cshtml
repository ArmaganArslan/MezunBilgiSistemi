@using EntityLayer.Concrete
@model List<EntityLayer.Mezun>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Mezun Bilgi Sistemine Hoş Geldiniz</h2>

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- /.navbar -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Mezun Sayfası</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var item in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">
                                    @item.Bolum.ad
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead"><b>@item.adSoyad</b></h2>
                                            <p class="text-muted text-sm"><b>İlgi Alanı: </b> @item.ilgiAlan </p>
                                            <p class="text-muted text-sm"><b>Ortalama: </b> @item.ortalama </p>
                                            <p class="text-muted text-sm"><b>Yabancı Dil: </b> @item.yabanciDil </p>
                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Adres: @item.adres</li>
                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Telefon: @item.tel</li>
                                            </ul>
                                        </div>
                                        <div class="col-5 text-center">
                                            <img src="~/AdminLTE-3.0.4/dist/img/mezun.png" alt="" class="img-circle img-fluid">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a href="/Mezun/DeleteMezun/@item.mezunId" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i> Sil
                                        </a>
                                        <a href="/Mezun/UpdateMezun/@item.mezunId" class="btn btn-sm btn-primary">
                                            <i class="fas fa-user"></i> Profili Gör
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</body>
</html>
