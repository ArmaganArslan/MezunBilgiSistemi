@model EntityLayer.Admin

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@using (Html.BeginForm("AddAdmin", "Admin", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kullanıcı Adı")
        @Html.TextBoxFor(x => x.kullaniciAd)
        @Html.ValidationMessageFor(x => x.kullaniciAd)
        <br /><br />
        @Html.Label("Şifre")
        @Html.TextBoxFor(x => x.sifre)
        @Html.ValidationMessageFor(x => x.sifre)
        <br /><br />
        @Html.Label("Mail")
        @Html.TextBoxFor(x => x.mail)
        @Html.ValidationMessageFor(x => x.mail)
        <br /><br />
        <button>Kaydet</button>
    </div>
}


